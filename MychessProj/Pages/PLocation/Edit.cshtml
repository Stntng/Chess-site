@page
@model MychessProj.Pages.PLocation.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Location</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Location.IdLocation" />
            <div class="form-group">
                <label asp-for="Location.CityCode" class="control-label"></label>
                <select asp-for="Location.CityCode" class="form-control" asp-items="ViewBag.CityCode"></select>
                <span asp-validation-for="Location.CityCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Location.NumberOfTables" class="control-label"></label>
                <input asp-for="Location.NumberOfTables" class="form-control" />
                <span asp-validation-for="Location.NumberOfTables" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Location.Addres" class="control-label"></label>
                <input asp-for="Location.Addres" class="form-control" />
                <span asp-validation-for="Location.Addres" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
