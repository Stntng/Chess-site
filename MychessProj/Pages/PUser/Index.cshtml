@model MychessProj.Pages.PUser.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Пользователи</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>

        @if (User.IsInRole("mod"))
        {
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.User[0].FirstName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.User[0].SecondName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.User[0].Password)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.User[0].LastName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.User[0].Age)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.User[0].current_rank)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.User[0].role)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.User[0].CityCodeNavigation)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.User)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.FirstName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SecondName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Password)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LastName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Age)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.current_rank)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.role)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CityCodeNavigation.CityCode)
                    </td>

                    <td>
                        <a asp-page="./Edit" asp-route-id="@item.IdUser">Edit</a> |
                        <a asp-page="./Details" asp-route-id="@item.IdUser">Details</a> |
                        <a asp-page="./Delete" asp-route-id="@item.IdUser">Delete</a>
                    </td>

                </tr>
            }
        </tbody>
    </table>
        }
        @if(User.IsInRole("player") || User.IsInRole("judge"))
        {
    <table class="table">
             <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.User[0].FirstName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.User[0].SecondName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.User[0].LastName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.User[0].Age)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.User[0].current_rank)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.User[0].CityCodeNavigation)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.User)
            {
                @if (item.role != Models.User.roles.mod && item.role != Models.User.roles.judge)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.FirstName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.SecondName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.LastName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Age)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.current_rank)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CityCodeNavigation.CityCode)
                        </td>
                    </tr>
                }
            }
                    </tbody>
    </table>
        }

