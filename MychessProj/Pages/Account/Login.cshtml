@page
@using MychessProj.Models
@model MychessProj.Pages.Account.LoginModel
@{
}
@{
	ViewData["Title"] = "Login";
}

<h1>Login</h1>

<h4>User</h4>
<div class=" = "container border" style="padding:20px">
	<form method="post">
		<div class="text-danger" asp-validation-summary="ModelOnly"></div>
		<div class="form-group row">
			<div class="col-2">
				<label asp-for="Credential.FirstName"></label>
			</div>
			<div class="col-5">
				<input asp-for="Credential.FirstName" class="form-control" />
			</div>
			<span class="text-danger" asp-validation-for="Credential.FirstName"></span>
		</div>
		<div class="form-group row">
			<div class="col-2">
				<label asp-for="Credential.SecondName"></label>
			</div>
			<div class="col-5">
				<input asp-for="Credential.SecondName" class="form-control" />
			</div>
			<span class="text-danger" asp-validation-for="Credential.SecondName"></span>
		</div>
		<div class="form-group row">
			<div class="col-2">
				<label asp-for="Credential.LastName" class="control-label"></label>
			</div>
			<div class="col-5">
				<input asp-for="Credential.LastName" class="form-control" />
			</div>
			<span asp-validation-for="Credential.LastName" class="text-danger"></span>
		</div>
		<div class="form-group row">
			<div class="col-2">
				<label asp-for="Credential.Password"></label>
			</div>
			<div class="col-5">
				<input asp-for="Credential.Password" class="form-control" />
			</div>
			<span class="text-danger" asp-validation-for="Credential.Password"></span>
		</div>
		<div class="form-group row">
			<div class="col-2">
				<label asp-for="Credential.CityCode" class="control-label"></label>
			</div>
			<div class="col-5">
				<select asp-for="Credential.CityCode" class="form-control" asp-items="ViewBag.CityCode"></select>
			</div>
		</div>
		<div class="form-group row">
			<div class="col-2">
				<label asp-for="Credential.current_rank" class="control-label"></label>
			</div>
			<div class="col-5">
				<select asp-for="Credential.current_rank" class="form-control" asp-items="@Html.GetEnumSelectList<User.rank>()"></select>
			</div>
			<span asp-validation-for="Credential.current_rank" class="text-danger"></span>
		</div>
@*		<div class="form-group row">
			<div class="col-2">
				<label asp-for="Credential.role" class="control-label"></label>
			</div>
			<div class="col-5">
				<select asp-for="Credential.role" class="form-control" asp-items="@Html.GetEnumSelectList<User.roles>()"></select>
			</div>
			<span asp-validation-for="Credential.role" class="text-danger"></span>
		</div>*@
		<div class="form-group row">
			<div class="col-2">
				<label asp-for="Credential.Age" class="control-label"></label>
			</div>
			<div class="col-5">
				<input class="form-control" asp-for="Credential.Age" asp-format="{0:yyyy-MM-dd}" />
			</div>
			<span asp-validation-for="Credential.Age" class="text-danger"></span>
		</div>
		<div class="form-group row">
			<div class="col-2">
				<input type="submit" class="btn btn-primary" value="Login" />
			</div>
			<div class="col-5">
			</div>
		</div>
	</form>
</div>


@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}
 