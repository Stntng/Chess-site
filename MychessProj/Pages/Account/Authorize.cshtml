@page
@using MychessProj.Models;

@model MychessProj.Pages.Account.AuthorizeModel
@{
}
@{
	ViewData["Title"] = "Login";
}

<h1>Authorize</h1>

<h4>Вход в аккаунт</h4>
<div class=" = " container border" style="padding:20px">
	
	<form method="post">
		<div class="text-danger" asp-validation-summary="ModelOnly"></div>
		<div class="form-group row">
			<div class="col-2">
				<label asp-for="Credential.FirstName" style="color:white"></label>
			</div>
			<div class="col-5">
				<input asp-for="Credential.FirstName" class="form-control" />
			</div>
			<span class="text-danger" asp-validation-for="Credential.FirstName"></span>
		</div>
		<div class="form-group row">
			<div class="col-2">
				<label asp-for="Credential.SecondName" style="color:white"></label>
			</div>
			<div class="col-5">
				<input asp-for="Credential.SecondName" class="form-control" />
			</div>
			<span class="text-danger" asp-validation-for="Credential.SecondName"></span>
		</div>
		<div class="form-group row">
			<div class="col-2">
				<label asp-for="Credential.LastName" style="color:white" class="control-label"></label>
			</div>
			<div class="col-5">
				<input asp-for="Credential.LastName" class="form-control" />
			</div>
			<span asp-validation-for="Credential.LastName" class="text-danger"></span>
		</div>
		<div class="form-group row">
			<div class="col-2">
				<label asp-for="Credential.Password" style="color:white"></label>
			</div>
			<div class="col-5">
				<input asp-for="Credential.Password" class="form-control" />
			</div>
			<span class="text-danger" asp-validation-for="Credential.Password"></span>
		</div>
		<div class="form-group row">
			<div class="col-2">
				<input type="submit" class="btn btn-primary" value="Login" />
			</div>
			<div class="col-5">
			</div>
		</div>
		<partial name="_Notification" />
	</form>
</div>


@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}
