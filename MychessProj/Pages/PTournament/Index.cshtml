                <th>
                    @Html.DisplayNameFor(model => model.Tournament[0].IdLocationNavigation)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Tournament)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.NameTourn)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DateTourn)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.JudgeId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IdLocationNavigation.IdLocation)
                    </td>
                    <td>
                        <a asp-page="./Edit" asp-route-id="@item.IdTourn">Edit</a> |
                        <a asp-page="./Details" asp-route-id="@item.IdTourn">Details</a> |
