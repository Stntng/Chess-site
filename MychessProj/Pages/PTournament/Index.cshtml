@model MychessProj.Pages.PTournament.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
@if (User.IsInRole("mod"))
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Tournament[0].NameTourn)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Tournament[0].DateTourn)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Tournament[0].JudgeId)
